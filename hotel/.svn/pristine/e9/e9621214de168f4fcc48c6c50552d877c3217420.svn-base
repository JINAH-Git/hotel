@charset "EUC-KR";

ul, ol, li, body
{
	list-style: none;
	padding: 0;
	margin: 0; 
}

.head
{
 	width: 100%;
 	height: 120px;
 	position: relative;
 	z-index: 100;
 	background-color: #F1E3C4;
 	margin: 0;
 	padding: 0;
 	
}

.head a
{
	text-decoration: none;
	color: #101010;
}

.header
{
	width: 1200px; 
	height: 90px;
	position: relative;
	z-index: 100;
	display: block; 
	margin: 0 auto;
}

.logo
{
	width: 260px;
	font-size: 24px;
	margin: 0 auto;
}

.loginArea
{
	position: absolute; 
	top: 10px; 
	right: 10px; 
	font-size: 12px;
}

.hubMenu
{
	float: right;
}

.hubMenu li
{
	position: relative;
	display: inline-block;
	padding: 5px 10px;
	font-size: 16px;
	font-weight: 900;
}

.tail
{
	width: 100%;
	height: 300px;
}

.tail a
{
	text-decoration: none;
}

.localBox
{
	width: 100%;
	height: 170px;
	background-color: #F1E3C4;
	margin: 0 auto;
	padding: 0;
	font-size: 12px;
    color: #101010;
}

.brandInfo
{
	text-align: center;
	width: 1030px;
	height: 75px;
    display: block;
    overflow: hidden;
    float: right;
    box-sizing: border-box;
}

.info
{
	text-align: center;
	width: 1030px;
	height: 75px;
    display: block;
    overflow: hidden;
    box-sizing: border-box;
}

.brandInfo dt, .introduction dd
{
	display: inline-block;
	margin: 0 10px;
}

.footer
{
	width: 1200px;
	height: 150px;
	margin: 0 auto;
}


/* 내용 부분 css */
.main
{
	border: 2px solid blue;
	width: 1200px;
	margin: 0 auto;
	min-height: 1000px;
	display: flex;
	position: relative;
}

.menubar
{
	width: 270px; 
	height: 300px; 
	margin-top: 50px; 
	background-color: #F1E3C4;
	text-align: center;
}

.menubar h2
{	
	padding-top: 20px;
	color: brown;
}

.menubar hr
{
	height: 10px; 
	background-color: gold;
	border: none;
}

.menu
{
	width: 270px;
	height: 200px;
}

.menu li
{
	margin-top: 25px;
}

.menu a
{
	text-decoration: none;
	color: brown;
	font-size: 16px;
	font-weight: 900;
}

.contents
{
	border: 2px solid red;
	width: 880px;
	margin-top: 50px;
	margin-left: 50px;
	box-sizing: border-box;
}