@charset "EUC-KR";

#noticetb
{
	width: 700px;
	text-align: center;
	margin: 50px auto 0;	
}

#noticetb a
{
	text-decoration: none;
	color: #000;
}


/* 테이블의 맨 위(th) */
#noticetb th
{
	background: #F1E3C4;
}

/* 테이블의 선 표시*/
#noticetb td
{	
	height: 30px;
	border-bottom: 2px solid #F1E3C4;
}

/* 테이블의 게시물 번호 칸 길이 조정*/
#noticetb th:nth-child(2)
{
	width: 50px;
}
/* 테이블의 제목 칸 길이 조정*/
#noticetb th:nth-child(2)
{
	width: 300px;
}

/* 테이블의 작성자 칸 길이 조정*/
#noticetb th:nth-child(3)
{
	width: 110px;
}

/* 테이블의 작성일 칸 길이 조정*/
#noticetb th:nth-child(4)
{
	width: 110px;
}

#pagetb
{
	margin: 10px auto 0;
}
