	//isduplicate()(이메일 중복 검사)
	//true: 중복, false: 중복 아님 
	public boolean isduplicate(String email)
	{
		boolean flag = false;
		this.DBOpen();
		
		String sql = "";
		sql = "select email from user where email = '" + _R(email) + "' ";
		this.RunSelect(sql);
		//중복된 email이 존재
		if(this.Next() == true)
		{
			flag = true;
		}
		this.DBClose();
		return flag;
	}
		
	//login()(로그인 하기)
	//return 값 true: 로그인 성공, false: 로그인 실패
	public boolean login(String email, String pw)
	{
		boolean islogin = false;
		this.DBOpen();
		
		String sql = "";
		sql = "select email ";
		sql += "from user ";
		sql += "where email = '" + _R(email) + "' ";
		sql += "and pw = md5('" + _R(pw) + "') ";
		sql += "and level = 'U' ";
		this.RunSelect(sql);
		if(this.Next() == true)
		{
			//로그인 성공
			System.out.println("[" + _R(email) + "] 로그인 성공!!!");
			islogin = true;
		}else
		{
			System.out.println("[" + _R(email) + "] 로그인 성공!!!");
		}
		this.DBClose();
		return islogin;
		
	}
	
