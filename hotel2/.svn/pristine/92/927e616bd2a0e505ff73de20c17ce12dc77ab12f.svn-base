@charset "EUC-KR";

.service
{
	position: relative;
	min-height: 1000px;
}

.service div
{
	width: 600px;
	height: 300px;
	margin-left: 120px;
}

.service h4
{
	margin-top: 50px;
	margin-left: 120px;
	color: brown;
}

.service p

{
	font-weight: bold;
	text-align: center;	
}

#dining
{
	background: url("/hotel2/image/dining.jpg");
	background-size: cover;
}

#health
{
	background-image: url("/hotel2/image/health.jpg");
	background-size: cover;
}

#souna
{
	background-image: url("/hotel2/image/sauna.jpg");
	background-size: cover;
}

#swimming
{
	background-image: url("/hotel2/image/swimming.jpg");
	background-size: cover;
}

#fname1, #fname2, #fname3, #fname4
{
	margin-top: 10px;
	margin-left: 120px;
}

.btn
{
	height: 30px;
	position: absolute;
	right: 90px;
	margin-top: 10px;
}

#write, #cancel, #modify, #delete
{
	width: 60px;
	border-radius: 5%;
	border-width: 0;
	background: #F1E3C4;
	font-weight: 500;
	font-size: 18px;
	cursor: pointer;
}

