	<body>
	<script>
		window.onload = function()
		{
			alert("테스트");		
			
			//회원가입 약관
			//체크박스 전체 선택
			$(".checkbox_group").on("click","#check_all",function(){
				  var checked = $(this).is(":checked");
				  if(checked)
				  {
				  	$(this).parents(".checkbox_group").find('input').prop("checked", true);
				  } else 
				  {
				  	$(this).parents(".checkbox_group").find('input').prop("checked", false);
				  }
			});
			
			//체크박스 개별 선택
			$(".checkbox_group").on("click", ".normal", function() {
			    var is_checked = true;
			    
			    $(".checkbox_group .normal").each(function(){
			        is_checked = is_checked && $(this).is(":checked");
			    });
			    
			    $("#check_all").prop("checked", is_checked);
			});
			
			/*
			//생년월일 하이폰 자동입력
	
			*/
			//전화번호 하이폰 자동 입력
			$(document).on("keyup", ".numbertext", function() { 
				$(this).val( $(this).val().replace(/[^0-9]/g, "").replace(/(^02|^0505|^1[0-9]{3}|^0[0-9]{2})([0-9]+)?([0-9]{4})$/,"$1-$2-$3").replace("--", "-") );
			});
			
			//회원가입 취소 버튼 눌렀을 때
			$(".cancelbutton").click(function(){
				if(confirm("회원가입을 취소하겠습니까?") == false)
				{
					return;
				}
				document.location = "/hotel2/index.jsp";
			});
			
			//회원가입 필수 입력 받기
			$(".joinbutton").click(function(){
				//영문 성명
				if($(".englishname").val() == "")
				{
					$(".infodovalue1").html("영문 성명을 입력해주세요.");
					$(".englishname").focus();
					return false;
				}
				//한글 성명
				if($(".koreanname").val() == "")
				{
					$(".infodovalue2").html("한글 성명을 입력해주세요.");
					$(".koreanname").focus();
					return false;
				}
				//생년월일 
				if($(".brithtext").val() == "")
				{
					$(".infodovalue3").html("생년월일을 입력해주세요.");
					$(".brithtext").focus();
					return false;
				}
				//비밀번호
				if($(".pw").val() == "")
				{
					$(".infodovalue5").html("비밀번호를 입력해주세요.");
					$(".pw").focus();
					return false;
				}
				//비밀번호 확인
				if($(".pwcheck").val() != $(".pw").val())
				{
					$(".infodovalue6").html("비밀번호가 일치하지 않습니다.");
					$(".pwcheck").focus();
					return false;
				}
				
				//전화번호
				if($(".numbertext").val() == "")
				{
					$(".infodovalue9").html("전화번호를 입력해주세요.");
					$(".numbertext").focus();
					return false;
				}
				
				return true;			
			});
			//생년월일 입력
			$(document).on("keyup", ".brithtext", function() {
		     $(this).val( $(this).val().replace(/[^0-9]/g, "").replace(/([0-9]{4})+([0-9]{2})+([0-9]{2})$/,"$1-$2-$3").replace("--", "-"));
		    });
		}
		
	</script>
