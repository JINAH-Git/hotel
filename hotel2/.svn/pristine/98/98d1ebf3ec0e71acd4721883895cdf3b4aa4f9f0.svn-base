@charset "EUC-KR";

.main
{
	border: 1px solid lightgray;
    background-color: white;
    width: 1200px;
    height: 480px;
    margin:53px auto;
    position:relative;
}
/* 아이디 비밀번호 전체 */
.pwfindtotal
{
	background-color:white;
	padding: 63px 50px;
	text-align:center;
}

/* 로그인 표지 전체 */
.introduction
{
	width:300px;
	height:50px;
	text-align: center;
}
/* 로그인 표지 SIGN IN */
.introhead
{
	width: 500px;
	text-align: left;
	font-size:15px;
}
.introtext 
{
	display: block;
	margin-block-start: 1em;
	margin-block-end: 1em;
	margin-inline-start: 0px;
	margin-inline-end: 0px;
	font-family: notokrL, gothamL, playfair;
}
.line
{
	border 1px solid;
	margin: 0;
	
}

.pwfindtotaltext
{
	width:1200px;
	margin: 0 auto;
	margin-left:30px;
}

/* pw 코멘트 */
.infodovalue9
{
	position:absolute;
	color:#B01414;
	margin-top: 50px;
	left:50px;
	width:500px;
	margin-left:53px;
}
/* pw confirm  코멘트 */
