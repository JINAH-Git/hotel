/* 이메일 코드 내용란 */
.pw
{
	background-color: #f9f9f9;
	width: 250px;
	height: 10px;
	padding: 20px;
	border: solid #ccc;
	border-width: 0 0 1px 0;
	margin-bottom: 15px;
	font-size: 18px;
	vertical-align: middle;
	color: #000;
	position:absolute;
	left:-35px;
	top:230px;
}
.pwcheck
{
	background-color: #f9f9f9;
	width: 250px;
	height: 10px;
	padding: 20px;
	border: solid #ccc;
	border-width: 0 0 1px 0;
	margin-bottom: 15px;
	font-size: 18px;
	vertical-align: middle;
	color: #000;
	position:absolute;
	left:500px;
	top:230px;
}
/*변경 버튼 코멘트*/
.joinbutton
{
